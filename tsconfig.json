{
  "compileOnSave": true,
  "compilerOptions": {
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "inlineSourceMap": true,
    "module": "commonjs",
    "newLine": "lf",
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "outDir": "dist",
    "pretty": true,
    "skipLibCheck": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "stripInternal": true,
    "target": "ES2017",

    "noImplicitAny": false,
    "charset": "utf8",
    "allowJs": false,
    "noEmitOnError": false,
    "noUnusedParameters": true,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "skipDefaultLibCheck": true,
    "importHelpers": true
  },
  "exclude": [
    "app/public",
    "app/views",
    "dist",
    "node_modules*",
    "test",
    "**/*.d.ts",
    "**/*.spec.ts"
  ]
}
